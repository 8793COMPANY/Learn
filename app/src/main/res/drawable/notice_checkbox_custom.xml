<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="#af6400" android:width="1.5dp" />
            <corners android:radius="4dp" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <stroke android:color="#af6400" android:width="1.5dp" />
                    <corners android:radius="4dp" />
                    <solid android:color="#fff" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/checkbox_check_icon" android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp" />
        </layer-list>
    </item>
</selector>