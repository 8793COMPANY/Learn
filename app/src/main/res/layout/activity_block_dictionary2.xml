<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.dictionary.BlockDictionaryActivity2">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/content_back_btn"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias="0.0575"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </Button>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintDimensionRatio="200:54"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintTop_toTopOf="@+id/back_btn"
        app:layout_constraintBottom_toBottomOf="@id/back_btn"
        app:layout_constraintLeft_toRightOf="@+id/guide_left"
        app:cardCornerRadius="40dp"
        app:cardElevation="2dp">

        <TextView
            android:id="@+id/block_dictionary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="블럭설명사전"
            android:textColor="#f78f43"
            android:fontFamily="@font/sb_aggro_m"
            android:layout_gravity="center"
            android:layout_marginTop="2dp" />

    </androidx.cardview.widget.CardView>

