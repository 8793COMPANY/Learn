<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PaymentTestActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시"
        android:background="@null"
        android:textColor="#af6400"
        android:id="@+id/restart"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/testText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/restart"
        android:textSize="14dp"/>

    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/nativeAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.gms.ads.formats.MediaView
            android:id="@+id/mediaView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"/>

    </com.google.android.gms.ads.nativead.NativeAdView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/adDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광고제거"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/adFullBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전면광고"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/adDeleteBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/adCheckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구독상태"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintLeft_toRightOf="@+id/adDeleteBtn"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/adCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인트로 이동"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/adCheckBtn"
        app:layout_constraintLeft_toRightOf="@+id/adDeleteBtn"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>