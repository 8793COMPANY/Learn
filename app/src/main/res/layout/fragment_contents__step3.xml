<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.contents_mode.view.Contents_Step3"
    android:background="#f7f7f7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_radius_20dp"
        app:layout_constraintHeight_percent="0.903"
        app:layout_constraintWidth_percent="0.459"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide_right">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/custom_radius_16dp_fcf1de"
            android:fontFamily="@font/sb_aggro_l"
            android:textColor="#af6401"
            android:paddingTop="5dp"
            android:text="무슨무슨 블럭을 찾아주세요"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.898"
            app:layout_constraintHeight_percent="0.132"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@+id/guide_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.054">
        </androidx.constraintlayout.widget.Guideline>

    </androidx.constraintlayout.widget.ConstraintLayout>


