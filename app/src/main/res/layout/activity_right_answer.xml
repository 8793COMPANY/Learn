    <com.learn4.view.custom.view.ScoreItem
        android:id="@+id/problem1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="20dp"
        app:title="Q1"
        app:layout_constraintDimensionRatio="200:190"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/problem2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"></com.learn4.view.custom.view.ScoreItem>

    <com.learn4.view.custom.view.ScoreItem
        android:id="@+id/problem2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="200:190"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintLeft_toRightOf="@+id/problem1"
        app:layout_constraintRight_toLeftOf="@+id/problem3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"></com.learn4.view.custom.view.ScoreItem>

    <com.learn4.view.custom.view.ScoreItem
        android:id="@+id/problem3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="200:190"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintLeft_toRightOf="@+id/problem2"
        app:layout_constraintRight_toLeftOf="@+id/problem4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"></com.learn4.view.custom.view.ScoreItem>


    <com.learn4.view.custom.view.ScoreItem
        android:id="@+id/problem4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="200:190"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintLeft_toRightOf="@+id/problem3"
        app:layout_constraintRight_toLeftOf="@+id/problem5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"></com.learn4.view.custom.view.ScoreItem>

    <com.learn4.view.custom.view.ScoreItem
        android:id="@+id/problem5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="200:190"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintTop_toBottomOf="@+id/result_text"
        app:layout_constraintLeft_toRightOf="@+id/problem4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"></com.learn4.view.custom.view.ScoreItem>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_to_solve_problem_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="310:80"
        app:layout_constraintWidth_percent="0.22"
        android:background="@drawable/round_storke_btn"
        android:text="다시풀기"
        android:textSize="19dp"
        android:textColor="#f68f42"
        app:layout_constraintTop_toTopOf="@+id/guide_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/finish_btn"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.95"></androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/finish_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="310:80"
        app:layout_constraintWidth_percent="0.22"
        android:background="@drawable/round_gradation_btn"
        android:text="나가기"
        android:textSize="19dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/guide_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1"></androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>
