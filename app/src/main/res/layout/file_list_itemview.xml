    <TextView
        android:id="@+id/file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16dp"
        android:text="LED 블록"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/select_btn"
        ></TextView>

    <Button
        android:id="@+id/select_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:text="선택"
        android:textSize="13dp"
        android:textColor="#b45611"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintDimensionRatio="80:36"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/file_name"
        app:layout_constraintRight_toLeftOf="@+id/delete_btn"
        ></Button>

    <Button
        android:visibility="gone"
        android:id="@+id/delete_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:text="삭제"
        android:textSize="13dp"
        android:textColor="#b45611"
        android:layout_marginLeft="7dp"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintDimensionRatio="80:36"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/select_btn"
        app:layout_constraintRight_toRightOf="parent"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>