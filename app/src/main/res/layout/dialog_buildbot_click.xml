            android:fontFamily="@font/sb_aggro_l"
            android:textSize="18dp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="@id/vertical_start"
            app:layout_constraintRight_toRightOf="@id/horizontal_end"
            app:layout_constraintHeight_percent="0.27"
            app:layout_constraintWidth_percent="0.38" />

        <Button
            android:id="@+id/code_load_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buildbot_btn_custom"
            android:text="코드 불러오기"
            android:fontFamily="@font/sb_aggro_l"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@id/horizontal_end"
            app:layout_constraintBottom_toBottomOf="@id/vertical_end"
            app:layout_constraintHeight_percent="0.27"
            app:layout_constraintWidth_percent="0.38" />

