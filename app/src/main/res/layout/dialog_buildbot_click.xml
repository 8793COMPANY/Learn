            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buildbot_btn_custom"
            android:text="코딩 튜터"
            android:fontFamily="@font/sb_aggro_l"
            android:textSize="18dp"
            android:textColor="#ffffff"
            app:layout_constraintTop_toTopOf="@id/vertical_start"
            app:layout_constraintLeft_toLeftOf="@id/horizontal_start"
            app:layout_constraintHeight_percent="0.27"
            app:layout_constraintWidth_percent="0.38" />

        <Button
            android:id="@+id/exercise_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buildbot_btn_custom"
