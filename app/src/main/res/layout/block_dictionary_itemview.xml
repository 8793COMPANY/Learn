<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/block_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="14dp"
        android:textColor="#db7976"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"></TextView>

    <TextView
        android:id="@+id/block_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아두이노에서 무슨 PIN을 어떻게 사용할지 정하는"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="12dp"
        android:textColor="#3b3938"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/block_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="5dp"></TextView>


    <ImageView
        android:id="@+id/block_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:adjustViewBounds="true"
        android:backgroundTint="@color/brown_b45611"
        app:layout_constraintTop_toBottomOf="@+id/block_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0"></ImageView>

    <FrameLayout
        android:id="@+id/block_view"
        android:backgroundTint="@color/brown_b45611"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"

        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/block_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"></FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>