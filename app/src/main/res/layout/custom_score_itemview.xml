    <ImageView
        android:id="@+id/select_stroke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/problem_score_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></ImageView>

    <TextView
        android:id="@+id/problem_number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/no_stroke_round_background"
        android:backgroundTint="#f68f42"
        android:text="Q1"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:includeFontPadding="false"
        android:gravity="center"
        app:layout_constraintDimensionRatio="130:44"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintTop_toTopOf="@+id/select_stroke"
        app:layout_constraintBottom_toBottomOf="@+id/select_stroke"
        app:layout_constraintLeft_toLeftOf="@+id/select_stroke"
        app:layout_constraintRight_toRightOf="@+id/select_stroke"></TextView>

    <ImageView
        android:id="@+id/answer_correct_check_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/problem_number"
        app:layout_constraintBottom_toBottomOf="@+id/select_stroke"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></ImageView>



