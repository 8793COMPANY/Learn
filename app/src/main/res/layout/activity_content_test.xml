<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.contents.ContentsActivity"
    android:background="#fcf1de">


    <Button
        android:id="@+id/back_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/content_back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.04"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.03"></Button>

    <Button
        android:id="@+id/contents_mode_select_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_storke_btn"
        android:includeFontPadding="false"
        android:text="기본모드"
        android:textStyle="bold"
        android:textColor="#f78f43"
        android:fontFamily="@font/sb_aggro_m"
        android:textSize="15dp"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.97"></Button>

    <Button
        android:id="@+id/digitalwrite_btn_high"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_storke_btn"
        android:includeFontPadding="false"
        android:text="digital HIGH"
        android:textStyle="bold"
        android:textColor="#f78f43"
        android:fontFamily="@font/sb_aggro_m"
        android:textSize="15dp"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.1"></Button>


    <Button
        android:id="@+id/pinmode_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_storke_btn"
        android:includeFontPadding="false"
        android:text="pinmode"
        android:textStyle="bold"
        android:textColor="#f78f43"
        android:fontFamily="@font/sb_aggro_m"
        android:textSize="15dp"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.3"></Button>


    <Button
        android:id="@+id/digitalwrite_btn_low"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_storke_btn"
        android:includeFontPadding="false"
        android:text="digital low"
        android:textStyle="bold"
        android:textColor="#f78f43"
        android:fontFamily="@font/sb_aggro_m"
        android:textSize="15dp"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"></Button>

    <Button
        android:id="@+id/delay_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_storke_btn"
        android:includeFontPadding="false"
        android:text="delay"
        android:textStyle="bold"
        android:textColor="#f78f43"
        android:fontFamily="@font/sb_aggro_m"
        android:textSize="15dp"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.7"></Button>



    <Button
        android:id="@+id/contents_mode_move_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_storke_btn"
        android:includeFontPadding="false"
        android:text="이동하기"
        android:textStyle="bold"
        android:textColor="#f78f43"
        android:fontFamily="@font/sb_aggro_m"
        android:textSize="15dp"
        android:minHeight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/contents_mode_select_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.13"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.97">
    </Button>




    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/level_list"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/back_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.91"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintVertical_bias="1"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>