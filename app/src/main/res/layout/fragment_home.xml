                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/contents_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/content_mode_icon">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dictionary_mode"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shadow"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/drone_mode"
                app:layout_constraintDimensionRatio="300:352"
                app:layout_constraintLeft_toRightOf="@+id/content_mode"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/dictionary_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dictionary_mode_icon">
                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drone_mode"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shadow"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/drone_block_mode"
                app:layout_constraintDimensionRatio="300:352"
                app:layout_constraintLeft_toRightOf="@+id/dictionary_mode"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/drone_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drone_mode_icon">
                </Button>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/drone_block_mode"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shadow"
                android:layout_marginRight="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bluetooth_mode"
                app:layout_constraintDimensionRatio="300:352"
                app:layout_constraintLeft_toRightOf="@+id/drone_mode"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/drone_block_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drone_coding_mode_icon">
                </Button>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bluetooth_mode"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shadow"
                android:layout_marginRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio="300:352"
                app:layout_constraintLeft_toRightOf="@+id/drone_block_mode"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/bluetooth_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bluetooth_controller_btn">
                </Button>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
